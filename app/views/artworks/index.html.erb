<h1>Artworks</h1>

<% @artworks.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |artwork| %>
      <div class="col-md-4">
        <%= image_tag artwork.picture_url, width: '100%' if artwork.picture.present?%>
        <h4><%= link_to artwork.caption, artwork %></h4>
